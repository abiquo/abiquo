<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

	<context:component-scan base-package="com.abiquo.heartbeat">
		<context:exclude-filter type="assignable"
			expression="com.abiquo.heartbeat.client.dao.jdbc.JdbcHeartbeatLogDAOPremium" />
	</context:component-scan>

	<bean id="jdbcHeartbeatLogDAO"
		class="com.abiquo.heartbeat.client.dao.jdbc.JdbcHeartbeatLogDAO" />
		
</beans>
