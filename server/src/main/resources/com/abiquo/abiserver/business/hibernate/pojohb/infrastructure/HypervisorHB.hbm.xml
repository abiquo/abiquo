	<!--
		This query catch the hypervisors technologies assigned into machines
		of a determinate DataCenter
	-->
	<query name="GET_HYPERTECH_FROM_DATACENTER">
		select h.type
		from com.abiquo.abiserver.business.hibernate.pojohb.infrastructure.HypervisorHB as h
		inner join h.physicalMachine as pm
		inner join pm.dataCenter as dc
		where dc.idDataCenter = :idDataCenter
		group by h.type
	</query>
	
	<query name="GET_VDRP">
	SELECT vm.vdrpPort
		FROM VirtualmachineHB vm, HypervisorHB h
		WHERE vm.hypervisor.idHyper = :idHyper 
		AND h.physicalMachine.idPhysicalMachine = :idPM
	</query>
	
	<query name="HYPERVISOR.GET_HYPER_FROM_PHYSICALMACHINE">
		SELECT hyp FROM com.abiquo.abiserver.business.hibernate.pojohb.infrastructure.HypervisorHB  hyp
