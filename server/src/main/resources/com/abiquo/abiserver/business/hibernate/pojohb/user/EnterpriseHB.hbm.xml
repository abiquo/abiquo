	<!--
		SQL query to obtain the total allocations of a resource. only sum
		virtualMachiens on state different to NOT_DEPLOYED.
	-->
	<query name="SUM_USED_CPU_RESOURCES">
		SELECT SUM(vm.cpu) FROM
		NodeVirtualImageHB as nvi,
		NodeHB as n,
		VirtualappHB as va,
		VirtualmachineHB as vm

		WHERE
		va.enterpriseHB.idEnterprise=:idEnterprise
		AND n.idVirtualApp=va.idVirtualApp
		AND nvi.idNode=n.idNode
		AND nvi.virtualMachineHB.idVm=vm.idVm
		AND vm.state!=:state         
    </query>

	<query name="SUM_USED_RAM_RESOURCES">
