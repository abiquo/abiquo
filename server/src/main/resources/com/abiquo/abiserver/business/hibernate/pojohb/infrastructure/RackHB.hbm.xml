	<sql-query name="RACKS.FIND_BY_MIN_VLANS">
		SELECT rack_filtered_dc.idRack
		FROM
		(
		SELECT r.idRack
		FROM rack r, virtualapp va, virtualdatacenter vdc, datacenter dc
		WHERE va.idVirtualApp = :idVApp AND vdc.idVirtualDataCenter =
		va.idVirtualDataCenter AND r.idDataCenter = vdc.idDataCenter
		)
		as rack_filtered_dc
		LEFT JOIN vlan_network_assignment vn ON
		rack_filtered_dc.idRack = vn.idRack
		GROUP BY rack_filtered_dc.idRack
		HAVING count(vn.vlan_network_id) + :vlan_vdc &lt;= ((r.vlan_id_max - r.vlan_id_min) - round((r.vlan_id_max - r.vlan_id_min) * (r.NRSQ/100) ,0))
		ORDER BY count(vn.vlan_network_id) + :vlan_vdc ASC
    </sql-query>
  	<query name="RACKS.GET_PHYSICAL_MACHINE_BY_RACK">
		Select pm
		from com.abiquo.abiserver.business.hibernate.pojohb.infrastructure.PhysicalmachineHB pm
		     inner join pm.rack racks
		where racks.idRack = :idRack
	</query>
  
