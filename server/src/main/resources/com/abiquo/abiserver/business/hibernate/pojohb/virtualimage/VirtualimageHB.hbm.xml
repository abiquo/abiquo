	<!-- Get virtual images by user -->
	<query name="GET_VIRTUAL_IMAGES_BY_USER">
	<![CDATA[
	    SELECT i
	    FROM VirtualimageHB i, UserHB u
        WHERE i.repository is not null
            AND (i.idEnterprise = u.enterpriseHB.id OR i.idEnterprise is null OR i.shared = 1)            
            AND u.user = :username
	]]>
	</query>
	
