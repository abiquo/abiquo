<!--
     User by Datagrid in VirtualMachineList component, to display the sate of a VirtualMachine
-->
<mx:HBox 
    width="12" height="13"
    horizontalAlign="center"
    verticalAlign="middle"
    xmlns:mx="http://www.adobe.com/2006/mxml"
    xmlns:utils="net.undf.abicloud.utils.*">
    <mx:Script>
        <![CDATA[
            import net.undf.abicloud.vo.infrastructure.VirtualMachine;
            import net.undf.abicloud.vo.infrastructure.State;

            [Bindable]
            private var _virtualMachine:VirtualMachine;

            override public function set data(value:Object):void
            {
                this._virtualMachine = value as VirtualMachine;
            }
        ]]>
    </mx:Script>
    <utils:SmoothImage 
        width="14" height="14"
        includeInLayout="{this._virtualMachine.state.description != State.LOCKED}"
        source="{(this._virtualMachine.state.description == State.ON) ? StyleManager.getStyleDeclaration('.VirtualMachineStateRunning').getStyle('source') : 
   								((this._virtualMachine.state.description == State.PAUSED) ? StyleManager.getStyleDeclaration('.VirtualMachineStatePaused').getStyle('source') : StyleManager.getStyleDeclaration('.VirtualMachineStateStopped').getStyle('source'))}"
        visible="{this._virtualMachine.state.description != State.LOCKED}"/>

    <mx:SWFLoader 
        width="14" height="14"
        includeInLayout="{this._virtualMachine.state.description == State.LOCKED}"
        source="{StyleManager.getStyleDeclaration('.VirtualMachineLoadingIcon').getStyle('source')}"
        visible="{this._virtualMachine.state.description == State.LOCKED}"/>
</mx:HBox>
