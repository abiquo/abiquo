    <!-- BUILD SETTINGS -->
    <!-- -->
    <!-- Build properties -->
    <build>
        <finalName>api</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-sources</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <excludeResources>true</excludeResources>
                            <includes>
                                <include>**/resources/*.java</include>
                                <include>**/resources/**/*.java</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>classes</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>classes</classifier>
                            <excludes>
                                <exclude>**/*test*</exclude>
                                <exclude>**/data/**</exclude>
                                <exclude>**/populateData/**</exclude>
                                <exclude>**/tomcat/**</exclude>
                                <exclude>**/conf/**</exclude>
                            </excludes>
                            <includes>
                                <include>**</include>
                            </includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>testing</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>resources</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>exposed-resources</classifier>
                            <includes>
                                <include>**/resources/*.class</include>
                                <include>**/resources/**/*.class</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <db.create>${basedir}/../database/test/kinton-schema-test.sql</db.create>
                        <db.insert>${basedir}/src/test/resources/data/execute_test_inserts.sql</db.insert>
                        <db.delete>${basedir}/src/test/resources/data/execute_test_deletes.sql</db.delete>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <systemPropertyVariables>
                        <rs.basedir>${basedir}</rs.basedir>
                        <db.create>${basedir}/../database/test/kinton-schema-test.sql</db.create>
                        <db.insert>${basedir}/src/test/resources/data/execute_test_inserts.sql</db.insert>
                        <db.delete>${basedir}/src/test/resources/data/execute_test_deletes.sql</db.delete>
                        <webapp.context>/api</webapp.context>
                        <webapp.dir>${basedir}/src/test/webapp</webapp.dir>
                        <abiquo.server.networking.vlanPerVdc>4</abiquo.server.networking.vlanPerVdc>
                        <abicloud.tracer.brokerUrl>tcp://localhost:6996</abicloud.tracer.brokerUrl>
                        <am.webapp.context>/am</am.webapp.context>
                        <am.webapp.dir>${basedir}/../am/target/am</am.webapp.dir>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1-beta-1</version>
            </plugin>
        </plugins>
        <filters>
            <filter>../system-properties/src/main/filters/${env}-${env.family}.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>tomcat/*</exclude>
                </excludes>
            </resource>
            <!-- Test resources used by embed Jetty -->
            <resource>
                <directory>src/test/resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
    </build>
    <profiles>
        <profile>
            <id>dev</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
